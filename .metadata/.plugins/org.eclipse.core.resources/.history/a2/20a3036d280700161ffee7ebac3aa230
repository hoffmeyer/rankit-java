package rankit;

import java.util.ArrayList;
import java.util.List;

import ro.pippo.core.Application;

public class RankitApp extends Application {

	@Override
	protected void onInit() {

		GET("/list", (routeContext) -> routeContext.json().send( getList() ) );

	}
	
	private List<Player> getList(){
		ArrayList<Player> list = new ArrayList<>();
		list.add(new Player(1, "The Hoff", 1000));
		list.add(new Player(2, "Testersen", 1000));
		list.add(new Player(3, "Heidi", 1000));
		list.add(new Player(4, "Hunden", 1000));
		return list;
	}
	
	private class Player {
		private Player data = new Player(0, 0, 0, 0, 0, 0, 0, 0);

		public Player( int id, String name, int points ){
			this.data.id = id;
			this.data.name = name;
			this.data.points = points;
		}

		public int getId() {
			return data.id;
		}
		public void setId(int id) {
			this.data.id = id;
		}
		public String getName() {
			return data.name;
		}
		public void setName(String name) {
			this.data.name = name;
		}
		public int getGamesPlayed() {
			return data.gamesPlayed;
		}
		public void setGamesPlayed(int gamesPlayed) {
			this.data.gamesPlayed = gamesPlayed;
		}
		public int getPoints() {
			return data.points;
		}
		public void setPoints(int points) {
			this.data.points = points;
		}
		public int getLostGames() {
			return data.lostGames;
		}
		public void setLostGames(int lostGames) {
			this.data.lostGames = lostGames;
		}
		public int getWonGames() {
			return data.wonGames;
		}
		public void setWonGames(int wonGames) {
			this.data.wonGames = wonGames;
		}
		public int getMostWinsInRow() {
			return data.mostWinsInRow;
		}
		public void setMostWinsInRow(int mostWinsInRow) {
			this.data.mostWinsInRow = mostWinsInRow;
		}
		public int getMostLosesInRow() {
			return data.mostLosesInRow;
		}
		public void setMostLosesInRow(int mostLosesInRow) {
			this.data.mostLosesInRow = mostLosesInRow;
		}
		public int getCurrentWinsInRow() {
			return data.currentWinsInRow;
		}
		public void setCurrentWinsInRow(int currentWinsInRow) {
			this.data.currentWinsInRow = currentWinsInRow;
		}
		public int getCurrentLossesInRow() {
			return data.currentLossesInRow;
		}
		public void setCurrentLossesInRow(int currentLossesInRow) {
			this.data.currentLossesInRow = currentLossesInRow;
		}
	}

}
