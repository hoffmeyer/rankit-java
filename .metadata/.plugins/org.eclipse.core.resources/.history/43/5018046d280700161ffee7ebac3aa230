package rankit;

public class Player {
	public int id;
	public String name;
	public int gamesPlayed;
	public int points;
	public int lostGames;
	public int wonGames;
	public int mostWinsInRow;
	public int mostLosesInRow;
	public int currentWinsInRow;
	public int currentLossesInRow;

	public Player(int gamesPlayed, int points, int lostGames, int wonGames, int mostWinsInRow, int mostLosesInRow,
			int currentWinsInRow, int currentLossesInRow) {
		this.gamesPlayed = gamesPlayed;
		this.points = points;
		this.lostGames = lostGames;
		this.wonGames = wonGames;
		this.mostWinsInRow = mostWinsInRow;
		this.mostLosesInRow = mostLosesInRow;
		this.currentWinsInRow = currentWinsInRow;
		this.currentLossesInRow = currentLossesInRow;
	}
}